<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--
    TintColor 用于模糊的颜色，
    TintOpacity 指透明度，值在 0 - 1 之间，越接近于 0，越透明
    BackgroundSource 表示背景虚化的对象，其中 HostBackDrop 表示模糊软件背后的背景，而 BackDrop 表示模糊应用内背景。
    FallbackColor 表示的是，当你切换到其他软件，或者电脑进入省电模式的时候，显示的颜色。
    -->
    <AcrylicBrush x:Key="ThemeAcrylicBrush"
                    TintColor="{ThemeResource SystemChromeMediumLowColor}"
                    TintOpacity="0.6"
                    FallbackColor="{ThemeResource SystemChromeMediumLowColor}"
                    BackgroundSource="HostBackdrop" />

    <AcrylicBrush x:Key="ThemeAcrylicBrushSecond"
                    TintColor="{ThemeResource SystemChromeMediumLowColor}"
                    TintOpacity="0.7"
                    FallbackColor="{ThemeResource SystemChromeMediumLowColor}"
                    BackgroundSource="HostBackdrop" />
</ResourceDictionary>
